{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="newsletter-form col-xl-4 col-lg-4 col-md-6 col-sm-10 col-xs-12 card p-sm-4 h-100 h-sm-auto mt-5 mx-auto">
        <h3 class="text-center">{{ 'title.edit_subscription'|trans }}</h3>

        {{ form_start(form, {'action': path('admin_subscription_edit', {id: subscription.id, _method: 'patch'}), attr: {novalidate: 'novalidate'}}) }}
        {{ form_row(form.name, {'attr': {'placeholder': 'Enter subscribers name' }}) }}
        {{ form_row(form.email, {'attr': {'placeholder': 'Enter subscribers email' }}) }}
        {{ form_row(form._token) }}
        <div class="pull-right">
            <a href="{{ path('admin_subscription_index') }}" class="mr-2">{{ 'label.cancel'|trans }}</a>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.save'|trans }}
            </button>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}