{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/admin.css') }}">
{% endblock %}

{% block javascripts %}
    {#{{ parent() }}#}
    <script src="{{ asset('build/runtime.js') }}"></script>
    <script src="{{ asset('build/js/admin.js') }}"></script>
{% endblock %}


{% block header %}
    <header class="mb-4">
        <div class="navbar navbar-default navbar-static-top navbar-dark bg-primary" role="navigation">
            <div class="container">
                <div class="navbar-header col-sm-2 col-md-3 col-lg-3 w-auto">
                    <a class="navbar-brand" href="{{ path('admin') }}">
                        {{ 'menu.admin_header'|trans }}
                    </a>
                </div>
                    <ul class="nav navbar-nav navbar-right">

                        {% if app.user %}
                            <li>
                                <a href="{{ path('admin_logout') }}">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i> {{ 'menu.logout'|trans }}
                                </a>
                            </li>
                        {% endif %}

                    </ul>
            </div>
        </div>
    </header>
{% endblock %}